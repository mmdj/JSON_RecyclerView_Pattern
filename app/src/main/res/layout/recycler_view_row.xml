<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/txtVw_albumId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="album#"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/txtVw_title"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/txtVw_imageId"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="Image#"

        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtVw_albumId"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/txtVw_title"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/txtVw_title"
        android:layout_width="216dp"
        android:layout_height="67dp"
        android:text="Title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:gravity="center"
        />

</android.support.constraint.ConstraintLayout>